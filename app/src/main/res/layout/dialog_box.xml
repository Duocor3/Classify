<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="8dp"
    android:id="@+id/dialogcontainer">

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="5dp"
        android:inputType="textPersonName"
        android:hint="Change class name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/startTime"
            android:layout_width="0dp"
            android:layout_weight="1.225"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:background="@drawable/modifybutton"
            android:text="Starts 8:00 am"
            android:textAllCaps="false"
            android:textColor="@color/colorText"/>


        <Button
            android:id="@+id/endTime"
            android:layout_width="0dp"
            android:layout_weight="1.225"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:background="@drawable/modifybutton"
            android:text="Ends 9:00 am"
            android:textAllCaps="false"
            android:textColor="@color/colorText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:gravity="center">

        <Switch
            android:id="@+id/customSchedule"
            android:layout_width="0dp"
            android:layout_weight="2.4"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/modifybutton"
            android:switchPadding="16dp"
            android:text="Custom Schedule"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textColor="@color/colorText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/daysOfTheWeek"
        android:gravity="center"
        android:weightSum="6.2">

        <Button
            android:id="@+id/mon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/modifybutton"
            android:text="Mon"
            android:textAllCaps="false"
            android:textColor="@color/colorText"/>

        <Button
            android:id="@+id/tue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/modifybutton"
            android:text="Tue"
            android:textAllCaps="false"
            android:textColor="@color/colorText"/>

        <Button
            android:id="@+id/wed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/modifybutton"
            android:text="Wed"
            android:textAllCaps="false"
            android:textColor="@color/colorText"/>

        <Button
            android:id="@+id/thu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/modifybutton"
            android:text="Thu"
            android:textAllCaps="false"
            android:textColor="@color/colorText"/>

        <Button
            android:id="@+id/fri"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/modifybutton"
            android:text="Fri"
            android:textAllCaps="false"
            android:textColor="@color/colorText"/>

    </LinearLayout>

</LinearLayout>