<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#47889e"
    android:focusable="true"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/fullScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#47889e"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#36529b"
            android:textColor="@color/colorText"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/title"
            android:text="Fullscreen"/>

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/deleteclicked"
            android:src="@mipmap/baseline_arrow_back_white_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#36529b"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:text="">


            <ImageButton
                android:id="@+id/viewleft"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:background="@drawable/deleteclicked"
                android:src="@mipmap/baseline_arrow_back_ios_white_24"
                android:tint="#96ffffff" />

            <TextView
                android:id="@+id/txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:textColor="@color/colorText"
                android:layout_weight="0.5"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/viewright"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:background="@drawable/deleteclicked"
                android:src="@mipmap/baseline_arrow_forward_ios_white_24"
                android:tint="#96ffffff" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>